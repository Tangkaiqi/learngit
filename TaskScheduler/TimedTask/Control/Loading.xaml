<Window x:Class="TimedTask.Control.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="加载" Height="60" Width="210"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">
    <Border x:Name="mainBoder" Height="55" Width="200" 
            BorderThickness="2" BorderBrush="#C0C0C0" 
            HorizontalAlignment="Left" Background="#FFFFFF" CornerRadius="7" >
        <StackPanel Orientation="Horizontal">
            <Image Source="/Theme/Images/Loading.gif" Height="40"/>
            <Label Name="lblMsg" FontSize="14" FontFamily="微软雅黑" Foreground="#646464" 
               Content="正在处理，请稍等。。。" 
               HorizontalAlignment="Left"/>
        </StackPanel>
    </Border>
</Window>
